{
  "appId": "com.electron.spt-mod-config-editor",
  "productName": "spt-mod-config-editor",
  "directories": {
    "output": "release",
    "buildResources": "build"
  },
  "files": [
    "dist/**/*",
    "dist-electron/**/*"
  ],
  "win": {
    "target": [
      "nsis"
    ],
    "icon": "build/icon.ico"
  },
  "mac": {
    "target": [
      "dmg"
    ],
    "icon": "build/icon.icns",
    "category": "public.app-category.developer-tools"
  },
  "linux": {
    "target": [
      "AppImage"
    ],
    "icon": "build/icon.png",
    "category": "Development"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}